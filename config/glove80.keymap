        combo_excl { timeout-ms = <50>; key-positions = <24 25>; bindings = <&kp LS(N1)>; layers = <1>; };
        combo_question { timeout-ms = <50>; key-positions = <30 31>; bindings = <&kp LS(MINUS)>; layers = <1>; };
      };

